<Page x:Class="Ban.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ban"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <GroupBox Foreground="Red"  Header="Cпециальность">
            <StackPanel>
                <Label Foreground="blue"  Content="Код"></Label>
                <TextBox  Height="40"
                    Name="specialityID">
                </TextBox>
                <Label Foreground="blue"  Content="Название специальности"></Label>
                <TextBox  Height="40" 
                    Name="specialityName">
                </TextBox>
                <Label Foreground="blue"  Content="Квалификация"></Label>
                <TextBox Height="40"
                    Name="qualification">
                </TextBox>
                <Button Height="50" Margin="40" Foreground="white"  Background="Blue" Content="Создать" Click="AddSpeciality"></Button>
            </StackPanel>
        </GroupBox>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
    </Grid>
</Page>
